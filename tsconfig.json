{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@lib/*": ["lib/*"],
      "@public/*": ["public/*"],
      "@services/*": ["lib/services/*"],
      "@utils/*": ["lib/utils/*"],
      "@contexts/*": ["app/contexts/*"],
      "@api/*": ["app/api/*"],
      "@custom-types/*": ["app/types/*"],
      "@components/*": ["app/components/*"],
      "@styles/*": ["app/styles/*"],
      "@assets/*": ["app/assets/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
